.grid.pulled.blocks
  for spec in specifications
    .column.hand-full(data-date="#{Date.parse( new Date(spec.date) )}",class="#{(spec.title === 'Core 3.0')  ? 'desk-full' : 'desk-half'}")
      .card
        header.header
          h1.title 
            a(href="#{spec.url}",rel="bookmark") #{ spec.title }
        section.content
          if spec.meta_before_body
            != partial('../_slats', {meta_block : spec.meta_before_body})
          if spec.microdesc
            .copy
              p #{spec.microdesc}
        if spec.subspecs
          section.content.cards
            .grid.pulled.blocks
              for subspec, title in spec.subspecs
                .column.hand-full.knee-half
                  .card.small
                    header.header
                      if subspec.tags
                        .flag.reversed
                          .body
                            h2.title
                              a(href="#{subspec.url}") #{title}
                          .image
                            .tags
                              for tag in subspec.tags
                                if tag == 'Common'
                                  span.tag(hidden,data-filter-on="tag",class="#{tag}") #{tag}
                                else
                                  span.tag(data-filter-on="tag",class="#{tag}") #{tag} 
                      else
                        h2.title
                          a(href="#{subspec.url}") #{title}
                    if subspec.meta_before_body
                      section.content
                        != partial('../_slats', {meta_block : subspec.meta_before_body, hidden: ['Workgroup'], solo: 1})                          
        div.footer
          footer.meta
            if spec.tags
              .tags
                for tag in spec.tags
                  span.tag(data-filter-on="tag",class="#{tag}") #{tag}